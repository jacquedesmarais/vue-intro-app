<div id="app">
  {{ message }}<br>
  <input v-model="message">

  <h2>Reviews</h2>
    <div v-for="review in reviews" v-if="isPositive(review.text)">
      <h4>{{ review.text }}</h4>
      <h6>{{ review.reviewer }} - {{ review.rating }}</h6>
    </div>
  <h4>Add a Review</h4>
  Review: <input v-model="newReviewText"><br>
  Rating: <input v-model="newReviewRating"><br>
  Your Name: <input v-model="newReviewReviewer">

  <button v-on:click="addReview()">Add Review</button>
</div>